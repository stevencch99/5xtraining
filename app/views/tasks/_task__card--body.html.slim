div class="task--color-bar priority-#{task.priority}"
.check-box
  input type='checkbox' name='check-box' id="check-box-#{task.id}" class="check-box-input"
  label class='check-box-label priority-border-#{task.priority}' for="check-box-#{task.id}"
.task__info
  p.task--title = link_to "#{task.title}", task_path(task)
  p.task--desc = task.description
.task__time
  p.start-time
  p.end-time
